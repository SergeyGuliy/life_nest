{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",
    "incremental": true,
    "paths": {
      "@constants/*": ["node_modules/life_shared/constants"],
      "@enums/*": ["node_modules/life_shared/enums"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
  ],
  "paths": {
    "@constants/*": ["node_modules/life_shared/constants"],
    "@enums/*": ["node_modules/life_shared/enums"]
  }
}

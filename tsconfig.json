{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "ESNext" ],
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "NodeNext",
    "incremental": true,
    "paths": {
//      "@constants/*": ["node_modules/life_shared/constants/*"],
//      "@enums/*": ["node_modules/life_shared/enums/*"],
//      "@assets/*": ["src/assets/*"],
//      "@modules/*": ["src/modules/*"],
//      "@modules-helpers/*": ["src/modules-helpers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
  ],
  "paths": {
//    "@constants/*": ["node_modules/life_shared/constants/*"],
//    "@enums/*": ["node_modules/life_shared/enums/*"],
//    "@assets/*": ["src/assets/*"],
//    "@modules/*": ["src/modules/*"],
//    "@modules-helpers/*": ["src/modules-helpers/*"]
  }
}
